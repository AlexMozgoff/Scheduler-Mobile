<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="18sp" android:paddingTop="10dp"
                android:paddingStart="10dp" android:paddingRight="100dp"
                android:textColor="@android:color/background_light" android:textAlignment="textStart"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true" android:id="@+id/textView4"
                android:layout_alignEnd="@+id/textView3" android:paddingStart="10dp" android:paddingTop="5dp"
                android:textColor="@color/colorPrimary" android:paddingBottom="5dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textColor="@android:color/background_light" android:textAlignment="textEnd"
                android:layout_alignParentTop="true" android:layout_toEndOf="@+id/textView3"
                android:layout_above="@+id/textView4" android:layout_alignParentEnd="true" android:paddingRight="10dp"
                android:paddingTop="10dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textAlignment="textEnd"
                android:textColor="@android:color/background_light"
                android:layout_below="@+id/textView3" android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/textView4" android:layout_toEndOf="@+id/textView3"
                android:paddingRight="10dp" android:paddingBottom="5dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>