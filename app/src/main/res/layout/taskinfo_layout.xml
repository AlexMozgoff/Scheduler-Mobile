<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/colorPrimaryDark"
                tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp">

            <Button
                    android:layout_width="120dp"
                    android:id="@+id/button10"
                    android:drawableTop="@android:drawable/ic_menu_close_clear_cancel"
                    android:background="@color/colorPrimary" android:layout_height="35dp"
                    android:layout_alignBottom="@+id/button12" android:layout_centerHorizontal="true"/>
            <Button
                    android:layout_width="120dp"
                    android:id="@+id/button12"
                    android:background="@color/colorPrimary" android:drawableTop="@drawable/ic_action_name1"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
            <Button
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:id="@+id/button13"
                    android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
                    android:background="@color/colorPrimary" android:drawableTop="@drawable/ic_action_name"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:paddingLeft="80dp" android:paddingRight="80dp" android:paddingBottom="10dp"
                    android:paddingTop="10dp" android:textSize="24sp"
                    android:textColor="@android:color/background_light"
                    android:foregroundGravity="center_horizontal"
                    android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                    android:layout_marginTop="149dp" android:gravity="center_horizontal"
                    android:textAlignment="center"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11" android:paddingLeft="50dp"
                    android:paddingRight="50dp" android:paddingTop="10dp" android:paddingBottom="10dp"
                    android:textColor="@android:color/background_light" android:gravity="center_horizontal"
                    android:textSize="18sp" android:foregroundGravity="center_horizontal" android:textAlignment="center"
                    android:layout_below="@+id/textView7" android:layout_centerHorizontal="true"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textColor="@android:color/background_light" android:paddingLeft="30dp"
                    android:paddingRight="30dp" android:paddingTop="8dp" android:paddingBottom="8dp"
                    android:gravity="center_horizontal"
                    android:foregroundGravity="center_horizontal"
                    android:textAlignment="center" android:layout_below="@+id/textView11"
                    android:layout_alignStart="@+id/textView7" android:layout_marginStart="12dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13" android:paddingBottom="8dp"
                    android:paddingLeft="30dp" android:paddingRight="30dp" android:paddingTop="8dp"
                    android:textColor="@android:color/background_light" android:gravity="center_horizontal"
                    android:foregroundGravity="center_horizontal" android:textAlignment="center"
                    android:layout_below="@+id/textView11" android:layout_toEndOf="@+id/textView12"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>